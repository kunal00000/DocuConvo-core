{
  "extends": "@apify/tsconfig",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "outDir": "dist",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "lib": ["DOM"],
    "strict": true
  },
  "include": ["./src/**/*"]
}
